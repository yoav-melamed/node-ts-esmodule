{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  }
}
